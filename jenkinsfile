

pipeline {
    agent  any
    
    stages {
        stage('Build') {
            steps {
                sh 'ls'
                    sh "cd hello-java"
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') { 
            steps {
                
                sh 'mvn test' 
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml' 
                }
            }
        }
    }
}

